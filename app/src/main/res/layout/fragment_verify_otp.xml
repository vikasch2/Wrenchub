<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wrenchub.wrenchub.View.WrenchubTextView
        app:fontName="@string/appfontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:layout_marginRight="@dimen/ten_view_size"
        android:text="Verify OTP"
        android:visibility="gone"
        android:textSize="18sp" />

    <com.wrenchub.wrenchub.View.WrenchubTextView
        app:fontName="@string/appfontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:textColor="@color/button"
        android:layout_marginTop="@dimen/thiry_view_size"
        android:layout_marginRight="@dimen/ten_view_size"
        android:text="Enter OTP" />

    <FrameLayout
        android:id="@+id/otp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.wrenchub.wrenchub.View.WrenchubEditText
            app:fontName="@string/appfontregular"
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_view_size"
            android:background="@drawable/border_edittext"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:padding="20dp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_view_size"
            android:background="@drawable/border_edittext"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/ten_view_size">

            <com.wrenchub.wrenchub.View.WrenchubTextView
                app:fontName="@string/appfontregular"
                android:id="@+id/otp1"
                android:layout_width="@dimen/thiry_view_size"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/navigation_color"
                android:inputType="number"
                android:textSize="@dimen/twenty_text_size"
                android:focusable="false"
                android:maxLength="1"
                android:padding="@dimen/ten_view_size"
                android:singleLine="true" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/tewenty_view_size"
                android:layout_marginRight="@dimen/tewenty_view_size"
                android:background="@color/dark_grey" />

            <com.wrenchub.wrenchub.View.WrenchubTextView
                app:fontName="@string/appfontregular"
                android:id="@+id/otp2"
                android:layout_width="@dimen/thiry_view_size"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:focusable="false"
                android:textColor="@color/navigation_color"
                android:textSize="@dimen/twenty_text_size"
                android:maxLength="1"
                android:padding="@dimen/ten_view_size"
                android:singleLine="true" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/tewenty_view_size"
                android:layout_marginRight="@dimen/tewenty_view_size"
                android:background="@color/dark_grey" />

            <com.wrenchub.wrenchub.View.WrenchubTextView
                app:fontName="@string/appfontregular"
                android:id="@+id/otp3"
                android:layout_width="@dimen/thiry_view_size"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="@dimen/twenty_text_size"
                android:inputType="number"
                android:textColor="@color/navigation_color"
                android:focusable="false"
                android:maxLength="1"
                android:padding="@dimen/ten_view_size"
                android:singleLine="true" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/tewenty_view_size"
                android:layout_marginRight="@dimen/tewenty_view_size"
                android:background="@color/dark_grey" />

            <com.wrenchub.wrenchub.View.WrenchubTextView
                app:fontName="@string/appfontregular"
                android:id="@+id/otp4"
                android:layout_width="@dimen/thiry_view_size"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:focusable="false"
                android:textColor="@color/navigation_color"
                android:textSize="@dimen/twenty_text_size"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/ten_view_size"
                android:singleLine="true" />

        </LinearLayout>

    </FrameLayout>

    <com.wrenchub.wrenchub.View.WrenchubTextView
        app:fontName="@string/appfontregular"
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/button"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:layout_marginRight="@dimen/ten_view_size"
        android:text="Sent OTP on +91 9979979979"
        android:textStyle="bold" />


    <com.wrenchub.wrenchub.View.WrenchubButton
        app:fontName="@string/appfontregular"
        android:id="@+id/otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_view_size"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:layout_marginRight="@dimen/ten_view_size"
        android:layout_marginTop="@dimen/ten_view_size"
        android:background="@color/button"
        android:gravity="center"
        android:padding="@dimen/fifteen_view_size"
        android:text="VERIFY"
        android:textColor="@color/white" />

    <com.wrenchub.wrenchub.View.WrenchubTextView
        app:fontName="@string/appfontregular"
        android:id="@+id/resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_view_size"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:textColor="@color/button"
        android:gravity="right"
        android:padding="5dp"
        android:layout_marginRight="@dimen/ten_view_size"
        android:text="Resend OTP ?" />

    <com.wrenchub.wrenchub.View.WrenchubTextView
        app:fontName="@string/appfontregular"
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/thiry_view_size"
        android:layout_marginLeft="@dimen/ten_view_size"
        android:textColor="@color/button"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="@dimen/ten_view_size"
        android:text="Want us to call you for OTP ? " />


</LinearLayout>